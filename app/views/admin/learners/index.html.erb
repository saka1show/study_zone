<h2>学習者一覧画面</h2>

<table class="table table-hover table-inverse">
  <tr>
    <th>ＩＤ</th>
    <th>ニックネーム</th>
    <th>ステータス</th>
    <th></th>
  </tr>
  <% @learners.each_slice(5) do |row| %>
    <% row.each do |learner| %>
    <tr>
      <td><%= learner.id %></td>
      <td><%= learner.name %></td>
      <td><% if learner.is_active == true %>
    有効会員</br>
  <% else %>
    退会済</br>
  <% end %></br></td>
      <td><%= link_to "詳細", admin_learner_path(learner.id) %></td>
    </tr>
    <% end %>
  <% end %>
</table>