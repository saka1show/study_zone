  <% @created_problem.each_slice(5) do |row| %>
    <% row.each do |created_problem| %>
    <tr>
      <td><%= created_problem.subject.subject_name %></td>
      <td><%= created_problem.problem %></td>
      <td><%= link_to "詳細", admin_created_problem_path(created_problem.id) %></td>
    </tr>
    <% end %>
  <% end %>
