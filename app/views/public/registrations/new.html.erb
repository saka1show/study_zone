<div class="d-inline-block">
  <h2 class="bg-primary text-white">新規登録</h2>
</div>

<%= render "public/shared/error_messages", resource: resource %>

<% if flash[:alert].present? %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <table class="h5">
      <tr>
        <div class="field">
          <td align="right">
            <%= f.label "ニックネーム" %>　　<%= f.text_field :name %>
          </td>
        </div>
      </tr>
      <tr>
        <td colspan="number_of_columns">&nbsp;</td>
      </tr>
      <tr>
        <div class="field">
          <td align="right">
            <%= f.label "ニックネーム　よみがな" %>　　<%= f.text_field :name_kana %>
          </td>
        </div>
      </tr>
      <tr>
        <td colspan="number_of_columns">&nbsp;</td>
      </tr>
      <tr>
        <div class="field">
          <td align="right">
            <%= f.label "メールアドレス" %>　　<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </td>
        </div>
      </tr>
      <tr>
        <td colspan="number_of_columns">&nbsp;</td>
      </tr>
      <tr>
        <div class="field">
          <td align="right">
            <%= f.label "パスワード" %>　　<%= f.password_field :password, autocomplete: "new-password" %>
          </td>
        </div>
      </tr>
      <tr>
        <td colspan="number_of_columns">&nbsp;</td>
      </tr>
      <tr>
        <td align="center">
          <input class="btn btn-primary" type="submit" value="新規登録">
        </td>
      </tr>
    <tr>
      <td colspan="number_of_columns">&nbsp;</td>
    </tr>
    <tr>
      <td align="right">
        登録済みの方は<%= link_to "こちら", new_learner_session_path, class: 'link-underline' %>からログインしてください
      </td>
    </tr>
  </table>
<% end %>